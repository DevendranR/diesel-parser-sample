{
    "compilerOptions": {
      "typeRoots": ["node_modules/@types", "node_modules"],
      "types": ["carbon-components-react"],
      "jsx": "react-jsx",       // For React 17 and above
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "esnext",
      "target": "es5",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": "./src",  // Ensure TypeScript knows where to look for your source files
      "paths": {
        "@diesel-parser/json-form": ["node_modules/@diesel-parser/json-form"]
      }
    }
  }